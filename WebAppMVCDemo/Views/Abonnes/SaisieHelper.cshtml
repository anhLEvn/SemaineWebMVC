@model WebAppMVCDemo.Models.Abonne
@{
    ViewBag.Title = "SaisieHelper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SaisieHelper - aid de helpers Rasor</h2>
@using (Html.BeginForm(actionName: "SaisieHelper", controllerName: "Abonnes",
        method:FormMethod.Post, htmlAttributes: new { @class = "form-horizontal" }))
{


<div class="form-group">
    <label class="col-md-2 control-label">Numéro</label>

    <div class="col-md-10">
        @*<input type="number" class="form-control" name="Id" placeholder="Numéro">*@
        @Html.TextBoxFor(x => x.Id, new { @class = "form-control", @placehoder = "Numero" })
    </div>

    <label class="col-md-2 control-label">Nom</label>
    <div class="col-md-10">
        @*<input type="number" class="form-control" name="Id" placeholder="Numéro">*@
        @Html.TextBoxFor(x => x.Nom, new { @class = "form-control", @placehoder = "Nom" })
    </div>

    <label class="col-md-2 control-label">Prenom</label>
    <div class="col-md-10">
        @*<input type="number" class="form-control" name="Id" placeholder="Numéro">*@
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placehoder = "Email" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Enregistrer</button>
        </div>
    </div>
</div>
}

